<h1>
  Edit list
</h1>

<hr>

<form action="/update_list/<%= @lists.id %>">
  <!-- Label and input for blend_name -->
  <div class="form-group">
    <label for="title" class="control-label">
      Title
    </label>

    <input type="text" id="title" name="title" class="form-control" value="<%= @lists.title %>">
  </div>

  <!-- Label and input for origin -->
  <div class="form-group">
    <label for="description" class="control-label">
      Description
    </label>

    <input type="text" id="description" name="description" class="form-control" value="<%= @lists.description %>">
  </div>


  <button class="btn btn-default">
    Update list
  </button>
</form>

<hr>

<a href="/lists">
  Go back
</a>
